{
  "name": "bugherd-mcp",
  "version": "0.2.0",
  "mcpName": "io.github.Berckan/bugherd-mcp",
  "description": "MCP server for BugHerd integration - manage bugs and feedback from AI assistants",
  "type": "module",
  "main": "dist/bugherd-admin-mcp.js",
  "files": [
    "dist",
    "server.json",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "bugherd-admin-mcp": "dist/bugherd-admin-mcp.js",
    "bugherd-project-worker-mcp": "dist/bugherd-project-worker-mcp.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",

    "dev:mcp:admin": "tsx watch src/bugherd-admin-mcp.ts",
    "dev:mcp:admin:http": "PORT=3003 tsx watch src/bugherd-admin-mcp.ts",
    "dev:mcp:project-worker": "tsx watch src/bugherd-project-worker-mcp.ts",
    "dev:mcp:project-worker:http": "PORT=3003 tsx watch src/bugherd-project-worker-mcp.ts",

    "start:mcp:admin": "node dist/bugherd-admin-mcp.js",
    "start:mcp:admin:http": "PORT=3003 node dist/bugherd-admin-mcp.js",
    "start:mcp:project-worker": "node dist/bugherd-project-worker-mcp.js",
    "start:mcp:project-worker:http": "PORT=3003 node dist/bugherd-project-worker-mcp.js",

    "inspector:mcp:admin": "npx @modelcontextprotocol/inspector tsx src/bugherd-admin-mcp.ts"
  },
  "keywords": [
    "mcp",
    "bugherd",
    "ai",
    "bug-tracking",
    "feedback"
  ],
  "author": "Berckan Guerrero <hi@berck.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/berckan/bugherd-mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
