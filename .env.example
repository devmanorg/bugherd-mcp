# BugHerd API Key
# Get your API key from BugHerd: Settings > General Settings
BUGHERD_API_KEY=your-api-key-here

# Restricted server (project-scoped)
BUGHERD_PROJECT_ID=12345
BUGHERD_BOT_USER_ID=67890

# Optional output limits
BUGHERD_DESCRIPTION_MAX_CHARS=4000
BUGHERD_COMMENT_MAX_CHARS=2000

# Optional hint/filter for task listing
# Comma-separated column ids, e.g. "1,2,3"
BUGHERD_ACTIVE_COLUMN_IDS=
